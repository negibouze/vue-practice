.flex
  display flex
  flex-direction row
  flex-wrap nowrap
  align-items stretch
  justify-content flex-start

.list
  width: 100%
  height: 40px
  line-height: 40px

.list-item
  width: calc(100% / 4)
  height: 100%
  line-height: inherit
  text-align: center
  cursor: pointer
  &:hover
    background-color: #0ff
