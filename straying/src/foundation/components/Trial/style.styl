.container
  width: 100%
  height: 100%
.info-container
.img-container
  width: 50%
  height: 50%
.list-container
.svg-container
  width: 100%

table
  color: #333
  // font-family: Helvetica, Arial, sans-serif
  width: 640px 
  border-collapse: collapse
  border-spacing: 0 

td, th
  border: 1px solid #CCC
  height: 30px

th
  background: #F3F3F3
  font-weight: bold

td
  background: #FAFAFA
  text-align: center

.button-container
  width: 100%
  margin: 10px 0
  padding: 10px
  border-top: 1px solid #333
  border-bottom: 1px solid #333

.btn-normal
  width: 120px
  height: 40px
  border: 1px solid transparent
  border-radius: 4px
  background-color: #fcfcfc
  color: #292b2c
  font-size: inherit
  transition-property: all
  transition-duration: 200ms
  transition-timing-function: ease-in-out
  &:disabled
    border-color: #333
    background-color: #666
  &:not(:disabled):hover
    border-color: #adadad
    background-color: #e4e4e4
